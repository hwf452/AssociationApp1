<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hot_bg" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        style="@style/TopBackgroundTitleBarstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button1"
            android:visibility="gone"
            style="@style/TopTitleBackStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textView1"
            style="@style/TopTitleTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/member_center" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_below="@+id/relativeLayout1" >

        <RelativeLayout
            android:id="@+id/member_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/member_info_layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button52"
                android:layout_marginTop="10.5dip" >

                <ImageView
                    android:id="@+id/head_icon"
                    android:layout_width="55.2dp"
                    android:layout_height="55.2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21dip"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/portrait7_tab4" />

                <ImageView
                    android:id="@+id/right_arrow_tip1"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    style="@style/tab4_iv_right_style"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/right_arrow_tip1"
                    android:layout_toRightOf="@id/head_icon"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:id="@+id/member_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10.0dip"
                            android:text="黄文飞"
                            android:textColor="@color/list_text"
                            android:textSize="18.0sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/user_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="珠海夏浪科技有限公司"
                        android:textColor="#454545"
                        />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/relate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:background="@drawable/btn53_1_btn_selector"
                android:layout_below="@+id/member_info_layout1"
                android:layout_marginTop="10.5dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tab4_tv_item_style"
                    
                    android:text="@string/my_join_at" />
                <ImageView
                    android:id="@+id/right_arrow_tip2"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    style="@style/tab4_iv_right_style"/>
                
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/relate2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:background="@drawable/btn53_2_btn_selector"
                android:layout_below="@+id/relate1">
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tab4_tv_item_style"
                    android:text="@string/message_center" />
                <ImageView
                    android:id="@+id/right_arrow_tip3"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    style="@style/tab4_iv_right_style"/>
                <TextView 
                    android:layout_width="27.2dp"
                    android:layout_height="17.2dp"
                    android:background="@drawable/button56"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:textColor="#ffffff"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/right_arrow_tip3"
                    android:text="1"/>
                
                
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/relate3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:background="@drawable/btn53_2_btn_selector"
                android:layout_below="@+id/relate2">
                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tab4_tv_item_style"
                    android:text="@string/my_crcode" />
                <ImageView
                    android:id="@+id/right_arrow_tip4"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    style="@style/tab4_iv_right_style"/>
                
                
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/relate4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:background="@drawable/btn53_3_btn_selector"
                android:layout_below="@+id/relate3">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tab4_tv_item_style"
                    android:text="@string/card_collect" />
                <ImageView
                    android:id="@+id/right_arrow_tip5"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    style="@style/tab4_iv_right_style"/>
                
                
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/relate5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:background="@drawable/btn53_1_btn_selector"
                android:layout_below="@+id/relate4"
                android:layout_marginTop="10.5dp">
                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tab4_tv_item_style"
                    android:text="@string/store_collect" />
                <ImageView
                    android:id="@+id/right_arrow_tip6"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    style="@style/tab4_iv_right_style"/>
                
                
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/relate6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:background="@drawable/btn53_2_btn_selector"
                android:layout_below="@+id/relate5">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tab4_tv_item_style"
                    android:text="@string/info_collect" />
                <ImageView
                    android:id="@+id/right_arrow_tip7"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    style="@style/tab4_iv_right_style"/>
                
                
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/relate7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:background="@drawable/btn53_3_btn_selector"
                android:layout_below="@+id/relate6">
                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tab4_tv_item_style"
                    android:text="@string/product_collect" />
                <ImageView
                    android:id="@+id/right_arrow_tip8"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    style="@style/tab4_iv_right_style"/>
                
                
            </RelativeLayout>
            
            <Button 
                android:id="@+id/btnLogout"
                android:layout_below="@+id/relate7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:background="@drawable/btn54_btn_selector"
                android:layout_marginLeft="30dp"
                android:textSize="18sp"
                android:textColor="@drawable/tv_rb2_selector"
                android:layout_marginRight="30dp"
                android:text="@string/logout"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>