<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitesmoke"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:padding="@dimen/tab2_livesite_widget_padding" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/picture0003" />

        <TextView
            android:id="@+id/nameTextView1"
            style="@style/DoliveNameTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tab2_livesite_tv_little_margin"
            android:gravity="center"
            android:text="@string/livename" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/tab2_livesite_widget_padding" >

        <TextView
            android:id="@+id/titleTextView"
            style="@style/DoliveTitleTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dolive_site_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tab2_livesite_tv_little_margin"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dateTextView"
                style="@style/DoliveLittleTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dolive_site_date" />

            <TextView
                style="@style/DoliveLittleTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:text="@string/dolive_site_from" />

            <TextView
                android:id="@+id/addressTextView"
                style="@style/DoliveLittleTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dolive_site_address" />
        </LinearLayout>

        <TextView
            android:id="@+id/contentTextView"
            style="@style/DoliveInfoTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tab2_livesite_tv_little_margin"
            android:lines="4"
            android:text="@string/dolive_site_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="@dimen/tab2_livesite_tv_little_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/picture0004" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/picture0005" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/picture0006" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tab2_livesite_tv_little_margin" >

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@null"
                android:drawableLeft="@drawable/btn018_btn_selector"
                android:text="@string/comment"
                android:textColor="@color/cornflowerblue" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/tab2_livesite_widget_margin"
                android:layout_toLeftOf="@id/button1"
                android:background="@null"
                android:drawableLeft="@drawable/btn017_btn_selector"
                android:text="@string/praise"
                android:textColor="@color/cornflowerblue" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>