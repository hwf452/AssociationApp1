<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelateBottom"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b0000000"
    android:orientation="horizontal"
    android:weightSum="1618" >

    <RelativeLayout
        android:id="@+id/Relate1"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1000"
        android:background="#FFFFFF" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:fillViewport="true" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <LinearLayout
                    android:id="@+id/Relate3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:id="@+id/linear22"
                        android:layout_width="fill_parent"
                        android:layout_height="62.5dp"
                        android:layout_weight="1"
                        android:background="@drawable/btn_menu_selector"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <ImageView
                            android:id="@+id/imageView1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="12dp"
                            android:src="@drawable/head_8888" />

                        <Button
                            android:id="@+id/button8"
                            style="@style/TopTitleButton7Style1"
                            android:layout_width="match_parent"
                            android:layout_height="62.5dp"
                            android:gravity="left|center_vertical"
                            android:text="社云通账号登陆"
                            android:textColor="#000000" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/button9"
                        style="@style/TopTitleButton7Style1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/button_bg_menu_on"
                        android:drawableLeft="@drawable/ic_drawer_home_pressed"
                        android:gravity="left|center_vertical"
                        android:text="首页"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/button10"
                        style="@style/TopTitleButton7Style1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/btn102_btn_selector"
                        android:gravity="left|center_vertical"
                        android:text="我的贴子"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/button11"
                        style="@style/TopTitleButton7Style1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/btn333_btn_selector"
                        android:gravity="left|center_vertical"
                        android:text="我的报名"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/button12"
                        style="@style/TopTitleButton7Style1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/btn114_btn_selector"
                        android:gravity="left|center_vertical"
                        android:text="我的评论"
                        android:textColor="#000000" />
                    <Button
                        android:id="@+id/buttonMedia"
                        style="@style/TopTitleButton7Style1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/btn119_btn_selector"
                        android:gravity="left|center_vertical"
                        android:text="我的直播"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/button13"
                        style="@style/TopTitleButton7Style1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/btn115_btn_selector"
                        android:gravity="left|center_vertical"
                        android:text="我的收藏"
                        android:textColor="#000000" />

                    <Button
                        android:id="@+id/button14"
                        style="@style/TopTitleButton7Style1"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/btn118_btn_selector"
                        android:gravity="left|center_vertical"
                        android:text="我的资料"
                        android:textColor="#000000" />

                    
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

    <View
        android:id="@+id/popWindowHidden"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="618" />

</LinearLayout>