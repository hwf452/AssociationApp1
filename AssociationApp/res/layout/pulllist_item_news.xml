<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:background="@drawable/list_item_selector" >

    <LinearLayout
        android:id="@+id/list_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:paddingBottom="6.0dip"
        android:paddingLeft="5.0dip"
        android:paddingTop="6.0dip" >

        <FrameLayout
            android:id="@+id/list_item_head_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/info_default_bg"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/list_item_head_image"
                android:layout_width="100dp"
                android:layout_height="73.4dp"
                android:layout_gravity="center"
                android:background="@drawable/info_default_icon" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="80dp"
            android:layout_weight="2.0"
            android:orientation="vertical"
            
            
            android:paddingLeft="5.0dip" >

            <TextView
                android:id="@+id/recommend_list_item_title_textview"
                style="@style/info_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:singleLine="true"
                android:text="ksdfds"/>

            <TextView
                android:id="@+id/recommend_list_item_desc_textview"
                style="@style/info_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dksfkdskfkds"
                android:paddingTop="7.0dip" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="32.0dip"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="5.0dip" >

            <!-- <ImageView
                android:id="@+id/push_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right|center"
                android:src="@drawable/is_recommend" /> -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_arrow" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/patting_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/parting_line" />

</RelativeLayout>