<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@drawable/live_background3"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/activeHeadImageView"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10.0dip"
            android:contentDescription="@null"
            android:src="@drawable/head156" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10.5dp"
            android:paddingRight="10.5dp" >

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:singleLine="true"
                android:text="为马航祈福"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activePeopleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_name"
                android:layout_marginTop="3dp"
                android:singleLine="true"
                android:text="夏浪科技有限公司"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/joinNumTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/activePeopleTextView"
                android:layout_below="@+id/activePeopleTextView"
                android:layout_marginTop="3dp"
                android:text="2654人报名"
                android:textColor="@color/gray"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/joinNumTextView"
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:singleLine="true"
                android:text="25分钟前"
                android:textColor="@color/gray"
                android:textSize="13sp" />
        </RelativeLayout>
    </LinearLayout>
    <View 
        android:layout_height="0dp"
        android:layout_width="0dp"/>

</LinearLayout>