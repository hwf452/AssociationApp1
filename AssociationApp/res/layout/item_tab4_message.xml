<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:background="@color/hot_bg" >

    <LinearLayout
        android:id="@+id/list_item_layout"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:paddingBottom="6.0dip"
        android:paddingLeft="5.0dip"
        android:paddingTop="6.0dip" >

        <FrameLayout
            android:id="@+id/list_item_head_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_gravity="center_vertical"
            
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/list_item_head_image"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_gravity="center"
                android:background="@drawable/portrait33" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="80dp"
            android:layout_weight="2.0"
            android:orientation="vertical"
            
            
            android:paddingLeft="5.0dip" >
            <RelativeLayout 
                android:id="@+id/relateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView 
                android:id="@+id/imageRedPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:src="@drawable/button57"/>

            <TextView
                android:id="@+id/recommend_list_item_title_textview"
                style="@style/info_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imageRedPoint"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="ksdfds"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/recommend_list_item_desc_textview"
                style="@style/info_item_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dksfkdskfkds"
                android:textColor="#343434"
                android:paddingTop="7.0dip" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:textSize="12sp"
                android:textColor="#343434"
                android:text="1天前" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="27dip"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            
            android:paddingLeft="5.0dip" >

            <!-- <ImageView
                android:id="@+id/push_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right|center"
                android:src="@drawable/is_recommend" /> -->

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right2_arrow" />
        </FrameLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/patting_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/parting_line" />

</RelativeLayout>