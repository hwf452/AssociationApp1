<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:minHeight="72dp"
    android:background="@drawable/list_item_selector1"
     >

    
        

        <ImageView
            android:id="@+id/list_item_head_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            android:src="@drawable/button005_on1" />
        
        <RelativeLayout
        android:id="@+id/relate22"
        android:layout_width="20dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true" />
   

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dip"
        android:layout_marginRight="5.0dip"
        
        android:layout_toRightOf="@id/list_item_head_image"
        android:singleLine="true"
        android:text="小马哥..."
        android:textColor="#454545"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/user_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/user_name"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/user_name"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@+id/relate22"
        android:singleLine="true"
        android:text="写得不错，赞一个"
        android:textColor="#565656"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/user_name"
        android:layout_toLeftOf="@+id/relate22"
        android:layout_marginLeft="30dp"
        android:textColor="#677676"
        android:textSize="14sp"
        android:layout_marginRight="5.0dip"
        android:layout_toRightOf="@+id/user_name"
        android:text="2014-3-12" />

</RelativeLayout>