<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitesmoke"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/tab2_livesite_widget_padding" 
    android:paddingRight="@dimen/tab2_livesite_widget_padding" 
    android:paddingTop="@dimen/tab2_livesite_widget_padding" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/personImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/picture0003"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/personTextView"
            style="@style/DoliveNameTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tab2_livesite_tv_little_margin"
            android:gravity="center"
            android:text="@string/livename" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/tab2_livesite_widget_padding" >


        <TextView
            android:id="@+id/contentTextView"
            style="@style/ActiveHintTextViewStyle1"
            android:paddingLeft="0dp"
            android:singleLine="false"
            android:text="@string/dolive_say" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginTop="@dimen/tab2_livesite_tv_little_margin"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/picture0004" />
            
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/picture0004" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/picture0005" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/picture0006" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tab2_livesite_tv_little_margin" >

            <TextView 
                style="@style/ActiveHintTextViewStyle1"
                android:textSize="@dimen/active_write_info_tv_size"
                android:text="1小时前"/>
            
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_toLeftOf="@id/button1"
                android:background="@null"
                android:drawableLeft="@drawable/btn017_btn_selector"
                android:textSize="@dimen/active_click_tv_size"
                android:text="@string/praise"
                android:textColor="@color/royalblue" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>