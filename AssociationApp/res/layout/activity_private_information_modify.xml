<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hot_bg" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        style="@style/TopBackgroundTitleBarstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/button1"
            style="@style/TopTitleBackStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/textView1"
            style="@style/TopTitleTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/member_center" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:layout_below="@+id/relativeLayout1" >

        <RelativeLayout
            android:id="@+id/member_info_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/member_info_layout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button52"
                android:layout_marginTop="10.5dip" >

                <ImageView
                    android:id="@+id/head_icon"
                    android:layout_width="55.2dp"
                    android:layout_height="55.2dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="21dip"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/portrait7_tab4" />

                

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    
                    android:layout_toRightOf="@id/head_icon"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/member_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10.0dip"
                            android:text="@string/tv_tab4_userName"
                            android:textColor="#000000"
                            android:textSize="18.0sp" />
                        <EditText
                    android:id="@+id/editText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/tab4_tv2_item_style"
                    android:text="@string/tv_tab4_myname" />
                    </LinearLayout>

                    
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout 
                android:id="@+id/relate1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:background="@drawable/btn53_1_btn_selector"
                android:layout_below="@+id/member_info_layout1"
                android:layout_marginTop="10.5dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tab4_tv_item_style"
                    
                    android:text="电话" />
                <EditText
                    android:id="@+id/editText2" 
