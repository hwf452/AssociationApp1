                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView2"
                    style="@style/tab4_tv1_item_style"
                    android:text="18680178306" />
                <ImageView
                    android:id="@+id/right_arrow_tip2"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    android:visibility="gone"
                    style="@style/tab4_iv_right_style"/>
                
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/relate2FixPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relate1"
                android:background="@drawable/btn53_2_btn_selector" >

