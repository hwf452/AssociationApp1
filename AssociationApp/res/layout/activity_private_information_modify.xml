                    android:layout_toRightOf="@+id/textView6"
                    style="@style/tab4_tv1_item_style"
                    android:text="zhgaxiehuei" />
                <ImageView
                    android:id="@+id/right_arrow_tip6"
                    android:layout_width="27.3dp"
                    android:layout_height="27.3dp"
                    android:visibility="gone"
                    style="@style/tab4_iv_right_style"/>
                
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:id="@+id/relate6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:background="@drawable/btn53_3_btn_selector"
                android:layout_below="@+id/relate5">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/tab4_tv_item_style"
                    android:text="地址" />
                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/textView7"
                    style="@style/tab4_tv1_item_style"
