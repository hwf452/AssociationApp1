<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/relate1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为马航祈福"
            android:textColor="#000000"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginTop="3dp"
            android:text="珠海关爱协会即将在3月22日开展关爱活动。"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/relate1"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/app_name"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/head155" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="珠海关爱协会"
            android:textColor="@color/cornflowerblue" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding1"
            android:background="@null"
            android:drawableLeft="@drawable/icon_time"
            android:text="30分钟前"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/quanzi_list_little" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding1"
            android:background="@null"
            android:drawableLeft="@drawable/btn017_btn_selector"
            android:text="@string/praise"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/quanzi_list_little" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/btn018_btn_selector"
            android:text="@string/comment"
            android:textColor="@color/lightgray"
            android:textSize="@dimen/quanzi_list_little" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear1"
        android:background="@drawable/list153"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/joinBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/btn157_selector"
            android:drawablePadding="2dp"
            android:padding="@dimen/padding1"
            android:text="@string/join"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/quanzi_list_default" />

        <Button
            android:id="@+id/comeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/btn158_selector"
            android:drawablePadding="2dp"
            android:padding="@dimen/padding1"
            android:text="@string/tv_enter_active_sign"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/quanzi_list_default" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/btn156_selector"
            android:drawablePadding="2dp"
            android:padding="@dimen/padding1"
            android:text="@string/collect"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/quanzi_list_default" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/btn023_btn_selector"
            android:drawablePadding="2dp"
            android:gravity="center_vertical"
            android:padding="@dimen/padding1"
            android:text="@string/share_list_title"
            android:textColor="@color/app_text_color"
            android:textSize="@dimen/quanzi_list_default" />
    </LinearLayout>

    <ImageView
        android:id="@+id/typeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/icon_bq_wq2" />

</RelativeLayout>